%div.sidebar
  %div.sidebar-top
    %h2.sidebar-top__user-name
      = current_user.name
    %ul.sidebar-top__lists
      %li.list
        = link_to new_group_path do
          = fa_icon "pencil-square-o", class: 'pencil-icon'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'gear-icon'
  %div.groups
    - current_user.groups.each do |group|
      %div.group
        = link_to group_messages_path(group) do
          %div.group__group-name
            = group.name
          %div.group__first-message
            = group.show_last_message
